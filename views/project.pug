extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        //- these variables were passed in
        h1= title

        p.lead.text-light= description

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        //-Looping through each skill
        ul
          each technology in technologies
            li= technology


        
        a.button.expanded(href=live target='_blank') Live Demo
        a.button.expanded(href=github target='_blank') GitHub Repo
    
    //- out of views and into the images folder
    each image in images
      img.image(src='../static/'+image)
  